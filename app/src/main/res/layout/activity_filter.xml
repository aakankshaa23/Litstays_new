<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.filterActivity"
    android:background="#181e34">
    <include
        layout="@layout/bar_layout"
        android:id="@+id/toolbar_filter"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="5dp"
       android:layout_marginTop="20dp"
       android:layout_below="@id/toolbar_filter">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:textStyle="bold"
               android:text="Rent"
               android:textColor="#84FFFF"
               android:fontFamily="@font/psr"
               android:textSize="20dp" />

           <SeekBar
               android:id="@+id/seekBar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView2"
              android:progressTint="#ffffff"
               android:layout_marginTop="3dp"
               android:max="50000"
               android:min="1000"

               android:progress="25000"
               android:thumbTint="#84FFFF"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"

               android:thumb="@android:drawable/ic_notification_overlay" />

           <TextView
               android:id="@+id/textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:textColor="#ffffff"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_below="@+id/seekBar"
               android:layout_centerHorizontal="true"/>

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/seekBar"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:text="₹1000"
               android:textColor="#ffffff" />

           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:textColor="#ffffff"
               android:layout_height="wrap_content"
               android:text="₹50000"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:layout_below="@+id/seekBar"/>

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bachelors Allowed"
               android:textStyle="bold"
               android:textColor="#84FFFF"
               android:fontFamily="@font/psr"
               android:layout_below="@+id/textView3"
               android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
               android:textSize="20dp"/>

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/textView5"
               android:orientation="horizontal"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:id="@+id/radiogroup">

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Yes"
                   android:layout_weight="1"
                   android:buttonTint="#84FFFF"
                   android:layout_marginRight="20dp"
                   android:textColor="#84FFFF"
                   android:fontFamily="@font/psr"

                   android:id="@+id/radioFilterY"/>
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="No"
                   android:textColor="#84FFFF"
                   android:buttonTint="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:layout_marginRight="20dp"
                   android:layout_weight="1"
                   android:id="@+id/radioFilterN"/>

           </RadioGroup>
           <TextView
               android:id="@+id/textView6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bedrooms"
               android:textColor="#84FFFF"
               android:fontFamily="@font/psr"
               android:layout_marginBottom="10dp"
               android:layout_below="@+id/radiogroup"
               android:layout_centerHorizontal="true"
               android:textSize="20dp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"/>


           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/radiogroup2"
               android:layout_below="@id/textView6">

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="1"
                   android:layout_marginLeft="20dp"
                   android:buttonTint="#84FFFF"
                   android:textColor="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:layout_marginRight="30dp"
                   android:id="@+id/one"/>
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginLeft="10dp"
                   android:buttonTint="#84FFFF"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="30dp"
                   android:textColor="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:text="2"
                   android:id="@+id/two"/>
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:buttonTint="#84FFFF"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="30dp"
                   android:layout_height="wrap_content"
                   android:text="3"
                   android:textColor="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:id="@+id/three" />
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:buttonTint="#84FFFF"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="30dp"
                   android:textColor="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:text="4+"
                   android:id="@+id/four" />


           </RadioGroup>


           <TextView
               android:id="@+id/textView10"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/radiogroup2"
               android:layout_centerHorizontal="true"
               android:textColor="#84FFFF"
               android:fontFamily="@font/psr"
               android:layout_marginTop="14dp"
               android:text="Furnishing Type"
               android:textStyle="bold"
               android:textSize="20dp" />
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_below="@id/textView10"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/radiogroup3">

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginRight="20dp"
                   android:layout_height="wrap_content"
                   android:text="Unfurnished"
                   android:buttonTint="#84FFFF"
                   android:textColor="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:id="@+id/unfurnished"/>
               <RadioButton
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginRight="20dp"
                   android:buttonTint="#84FFFF"
                   android:fontFamily="@font/psr"
                   android:textColor="#84FFFF"
                   android:layout_height="50dp"
                   android:text="Semi"
                   android:id="@+id/semifurnished"/>

               <RadioButton
                   android:id="@+id/fullyfurnished"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:fontFamily="@font/psr"
                   android:textColor="#84FFFF"
                   android:buttonTint="#84FFFF"
                   android:layout_height="50dp"
                   android:text="Fully" />

           </RadioGroup>
           <Button
               android:id="@+id/apply_filter_button"
               android:padding="10dp"
               style="@android:style/Widget.Material.Button.Colored"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/radiogroup3"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="16dp"
               android:layout_centerHorizontal="true"
               android:background="@drawable/rounded_button"
               android:text="APPLY FILTER"
               android:textColor="#000000"
               android:textStyle="bold"/>


       </RelativeLayout>

   </ScrollView>



</RelativeLayout>
