<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#181e34"
    android:layout_height="match_parent"
    tools:context=".cardActivity.cardActivity">
    <include
        layout="@layout/bar_layout"
        android:id="@+id/toolbar_card"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#181e34"
        android:elevation="10dp"
        android:id="@+id/card"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">
            </android.support.v4.view.ViewPager>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager"
                android:background="#181e34"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#181e34"
                android:layout_below="@id/tab_layout"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cost_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="RENT"
                    android:fontFamily="@font/psr"
                    android:textColor="#84ffff"
                    android:textSize="24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:fontFamily="@font/psr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/type_sell"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="Type"
                    android:textStyle="normal"
                    android:textColor="#84ffff"
                    android:textSize="12sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="#84ffff"/>
                <!--<ImageButton-->
                    <!--android:id="@+id/likebutton"-->
                    <!--android:layout_width="45dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:src="@drawable/ic_heart"-->
                    <!--android:tint="#D50000" />-->
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:textColor="#84ffff"
                android:textSize="26sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">


                <TextView
                    android:fontFamily="@font/psr"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textStyle="normal"
                    android:text="Address"
                    android:textColor="#84ffff"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#84ffff"
                    android:textStyle="normal"
                    android:id="@+id/location_sell"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
            <TextView
                android:fontFamily="@font/psr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="normal"
                android:text="Facing"
                android:textColor="#84ffff"
                android:textSize="16sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#84ffff"
                android:textStyle="normal"
                android:id="@+id/facing_sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Built Up Area"
                android:textStyle="normal"
                android:textColor="#84ffff"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#84ffff"
                android:layout_height="wrap_content"
                android:id="@+id/size_sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Bedrooms"
                android:textStyle="normal"
                android:textColor="#84ffff"
                android:textSize="16sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:textColor="#84ffff"
                android:id="@+id/bedroom_sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/psr"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Bathroom"
                    android:textStyle="normal"
                    android:textColor="#84ffff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#84ffff"
                    android:layout_height="wrap_content"
                    android:id="@+id/bathroom_sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/psr"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Furnishing"
                    android:textStyle="normal"
                    android:textColor="#84ffff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#84ffff"
                    android:layout_height="wrap_content"
                    android:id="@+id/furnishing_sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/psr"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Bachelors"
                    android:textStyle="normal"
                    android:textColor="#84ffff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#84ffff"
                    android:layout_height="wrap_content"
                    android:id="@+id/bachelors_Sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/psr"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Floors"
                    android:textStyle="normal"
                    android:textColor="#84ffff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#84ffff"
                    android:layout_height="wrap_content"
                    android:id="@+id/floor_sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/psr"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Parking"
                    android:textStyle="normal"
                    android:textColor="#84ffff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#84ffff"
                    android:layout_height="wrap_content"
                    android:id="@+id/parking_sell"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:layout_marginTop="4dp"
                android:textColor="#84ffff"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_sell"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="#84ffff"
                android:textAlignment="center"
                android:fontFamily="@font/psr"
                android:textSize="16sp"
                android:text="This is a demo text for the description to check if description is loading or not."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller Details"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:layout_marginTop="4dp"
                android:textColor="#84ffff"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="#84ffff"
                android:textAlignment="center"
                android:fontFamily="@font/psr"
                android:textSize="16sp"
                                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/contact_email"
                android:hint="Write here to contact to seller"
                android:textColorHint="#84ffff"
                android:fontFamily="@font/psr"
                android:textColor="#84ffff"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/button_contact"
                android:layout_height="wrap_content"
                android:text="send"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/psr"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
</LinearLayout>
    </ScrollView>
