<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Sell.SellFragment"
    android:background="#F0181E34"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_actionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toolbar_gradient"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Details"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/psr"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_actionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <EditText

                android:id="@+id/id_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:fontFamily="@font/psr"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:inputType="textCapSentences"
                android:layout_marginTop="10dp"
                android:hint="Type*" />
            <EditText

                android:id="@+id/id_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:fontFamily="@font/psr"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:inputType="textCapSentences"
                android:layout_marginTop="10dp"
                android:hint="Address" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:textColorHint="@android:color/black"
                android:id="@+id/id_bedrooms"
                android:fontFamily="@font/psr"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:hint="Bedrooms"/>
            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/psr"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/id_bathrooms"
                android:hint="Bathrooms"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Furnished"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/psr"
                android:textColor="#84ffff"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radio_furnished">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Not"
                    android:fontFamily="@font/psr"
                    android:textSize="@dimen/text_sell_dimen"
                    android:layout_weight="1"
                    android:textColor="#84FFFF"
                    android:buttonTint="#84ffff"
                    android:id="@+id/notfur"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Semi"
                    android:buttonTint="#84ffff"
                    android:textSize="@dimen/text_sell_dimen"
                    android:textColor="#84FFFF"
                    android:id="@+id/semifur"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Fully"
                    android:buttonTint="#84ffff"
                    android:textSize="@dimen/text_sell_dimen"
                    android:textColor="#84FFFF"
                    android:id="@+id/fullyfur"/>
            </RadioGroup>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:id="@+id/id_BuiltUp"
                android:hint="Super Builtup Area(ft*ft)*"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/psr"
                android:textColor="#84FFFF"
                android:id="@+id/id_bachelors"
                android:text="Bachelors Allowed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_group">
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="@dimen/text_sell_dimen"
                        android:layout_weight="1"
                        android:textColor="#84FFFF"
                        android:buttonTint="#84ffff"
                        android:id="@+id/radio_yes"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:buttonTint="#84ffff"
                        android:textSize="@dimen/text_sell_dimen"
                        android:textColor="#84FFFF"
                        android:id="@+id/radio_no"/>
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/id_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:textColorHint="@android:color/black"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:hint="Rent" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:inputType="number"
                android:id="@+id/id_total_floors"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:hint="Total Floors"/>

            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:background="@drawable/round_back"-->
                <!--android:padding="15dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:id="@+id/id_parking"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:textColorHint="@android:color/black"-->
                <!--android:fontFamily="@font/psr"-->
                <!--android:hint="Car Parking"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/psr"
                android:textColor="#84FFFF"
                android:text="Car Parking Available"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radio_group1">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textSize="@dimen/text_sell_dimen"
                    android:layout_height="wrap_content"
                    android:textColor="#84FFFF"
                    android:buttonTint="#84ffff"
                    android:id="@+id/radio_buttonY"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textSize="@dimen/text_sell_dimen"
                    android:layout_height="wrap_content"
                    android:textColor="#84FFFF"
                    android:buttonTint="#84ffff"
                    android:id="@+id/radio_buttonN"/>
            </RadioGroup>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/psr"
                android:background="@drawable/round_back"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:id="@+id/id_facing"
                android:hint="Facing"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/id_ad_title"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psr"
                    android:textColor="#84FFFF"
                    android:text="Ad Title*"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/id_Ad"
                    android:maxLength="400"
                    android:layout_below="@id/id_ad_title"
                    android:hint="eg 2 BHK Room"
                    android:textColor="#84FFFF"
                    android:textColorHint="#84FFFF"
                    android:fontFamily="@font/psr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_count_ad"
                    android:text="0"
                    android:layout_below="@id/id_Ad"
                    android:fontFamily="@font/psr"
                    android:textSize="20dp"
                    android:textColor="#84FFFF"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/psr"
                android:layout_marginTop="10dp"
                android:textColor="#84FFFF"
                android:text="Describe What You are Selling?"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:id="@+id/id_describe"
                android:inputType="textCapSentences"
                android:textColor="#84FFFF"
                android:textColorHint="#84FFFF"
                android:hint="Include condition features "/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:id="@+id/id_pickImages"
                android:text="Pick Image"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/psr"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="wrap_content"
                android:text="submit"
                android:background="@drawable/rounded_button"
                android:id="@+id/id_submit"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/psr"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>